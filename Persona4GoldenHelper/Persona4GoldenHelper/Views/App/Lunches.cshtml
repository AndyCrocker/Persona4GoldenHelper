@model LunchListingViewModel

<div>
    <h2 class="text-align-center col-md-12 col-sm-12 col-xs-12">Lunches</h2>
    <table class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
        <thead>
            <tr>
                <th class="slim-column text-align-center">Name</th>
                <th class="slim-column text-align-center">Method</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lunch in Model.Lunches)
            {
                <tr>
                    <td class="text-bright text-align-center">@lunch.Name</td>
                    <td class="text-align-center">@lunch.Method</td>
                </tr>
            }
        </tbody>
    </table>
    <h3 class="no-results text-error text-align-center col-md-12 col-sm-12 col-xs-12" hidden>No results</h3>
</div>