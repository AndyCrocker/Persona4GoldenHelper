@model QuestListingViewModel

<div>
    <h2 class="text-align-center col-md-12 col-sm-12 col-xs-12">Quests</h2>
    <table class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
        <thead>
            <tr>
                <th class="extra-slim-column text-align-center">Number</th>
                <th>Title</th>
                <th class="slim-column text-align-center mobile-hidden">Quest Giver</th>
                <th class="text-align-center mobile-hidden">Location</th>
                <th class="slim-column text-align-center mobile-hidden">Available</th>
                <th class="text-align-center mobile-hidden">Prerequisities</th>
                <th class="text-align-center mobile-hidden">Reward</th>
                <th>Instructions</th>
            </tr>
        </thead>
        <tbody class="alterate-row-colour">
            @foreach (var quest in Model.Quests)
            {
                <tr>
                    <td class="text-align-center">@quest.Number</td>
                    <td class="text-primary">@quest.Title</td>
                    <td class="text-align-center mobile-hidden">@quest.QuestGiver</td>
                    <td class="text-align-center mobile-hidden">@quest.Location</td>
                    <td class="text-align-center mobile-hidden">@quest.DateAvailable</td>
                    <td class="text-align-center mobile-hidden">@(quest.Prerequisites != "" ? quest.Prerequisites : "-")</td>
                    <td class="text-align-center mobile-hidden">@(quest.Reward != "" ? quest.Reward : "-")</td>
                    <td>@quest.Instructions</td>
                </tr>
            }
        </tbody>
    </table>
    <h3 class="no-results text-error text-align-center col-md-12 col-sm-12 col-xs-12" hidden>No results</h3>
</div>